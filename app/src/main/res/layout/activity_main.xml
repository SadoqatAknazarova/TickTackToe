<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/tortburchak_2"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/background_board"
        android:layout_width="357dp"
        android:layout_height="332dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321"
        app:srcCompat="@drawable/x_o_background" />


    <ImageView
        android:id="@+id/img0"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginStart="16dp"
        android:layout_marginBottom="220dp"
        android:tag="0"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        app:layout_constraintStart_toStartOf="@id/background_board"
        app:layout_constraintTop_toTopOf="@id/background_board"
        app:layout_constraintVertical_bias="0.583"
        tools:srcCompat="@drawable/x" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="220dp"
        android:tag="1"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        app:layout_constraintStart_toStartOf="@id/img0"
        app:layout_constraintTop_toTopOf="@id/background_board"
        tools:srcCompat="@drawable/x" />


    <ImageView
        android:id="@+id/img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="220dp"
        android:tag="2"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="@id/background_board"
        app:layout_constraintVertical_bias="0.478"
        tools:srcCompat="@drawable/x" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="100dp"
        android:tag="3"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        app:layout_constraintStart_toStartOf="@id/background_board"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintVertical_bias="0.538"
        tools:srcCompat="@drawable/x" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="100dp"
        android:tag="4"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        app:layout_constraintStart_toStartOf="@id/img3"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/x" />


    <ImageView
        android:id="@+id/img5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="100dp"
        android:tag="5"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        app:layout_constraintStart_toStartOf="@id/img4"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintVertical_bias="0.52"
        tools:srcCompat="@drawable/x" />

    <ImageView
        android:id="@+id/img6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="-10dp"
        android:tag="6"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        app:layout_constraintStart_toStartOf="@id/background_board"
        app:layout_constraintTop_toBottomOf="@id/img3"
        tools:srcCompat="@drawable/x" />

    <ImageView android:layout_height="100dp"
        android:layout_width="100dp"
        tools:srcCompat="@drawable/x"
        app:layout_constraintStart_toStartOf="@id/img6"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        android:layout_marginBottom="-10dp"
        android:id="@+id/img7"
        android:tag="7"
        android:layout_marginStart="115dp"
        app:layout_constraintTop_toBottomOf="@id/img4"/>


    <ImageView
        android:id="@+id/img8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="-10dp"
        android:tag="8"
        app:layout_constraintBottom_toBottomOf="@+id/background_board"
        app:layout_constraintStart_toStartOf="@id/img7"
        app:layout_constraintTop_toBottomOf="@id/img5"
        tools:srcCompat="@drawable/x" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button"
        android:text="PLAYER X"
        android:textColor="#03A9F4"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/background_board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <View android:background="@color/white"
        android:layout_height="90dp"
        android:layout_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/background_board"
        android:layout_marginTop="60dp"/>


    <TextView
        android:id="@+id/user1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="User1"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restart"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/user2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="User2"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/restart" />

    <TextView
        android:id="@+id/textuser1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user1_name"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textuser2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toBottomOf="@+id/user2_name"
        app:layout_constraintVertical_bias="0.071" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/restart"
        android:layout_width="195dp"
        android:layout_height="49dp"
        android:background="@drawable/button"
        android:text="Restart"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"

        android:text=""

        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/restart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>